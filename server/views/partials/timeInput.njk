{% macro timeInput(input) %}
  <div id="{{input.id}}-form" class="govuk-form-group{% if input.errorMessage %} govuk-form-group--error{% endif %}">
    <fieldset class="govuk-fieldset">
      <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">{{ input.label }}</legend>

      <div class="form-time">
        {% if input.hint %}
          <div class="govuk-hint">
            {{ input.hint }}
          </div>
        {% endif %}

        {% if input.errorMessage %}
          <div class="govuk-error-message" id="{{input.id}}-error">
            {{ input.errorMessage.text }}
          </div>
        {% endif %}

        <div
          class="govuk-form-group form-group-hours govuk-date-input__item"
          style="display: inline"
        >
          <label
            class="govuk-label govuk-date-input__label" 
            for="{{input.id}}-hours"
          >
            Hour
          </label>
          <input
            class="govuk-input govuk-date-input__input govuk-input--width-2"
            id="{{input.id}}-hours"
            name="{{input.name}}Hours"
            value="{{input.value.hours}}"
            type="number"
            pattern="[0-9]{2}"
            min="0"
            max="23"
            {% if input.disabled %}disabled{% endif %}
          />
        </div>

        <div
          class="govuk-date-input__item"
          style="display: inline"
        >
          :
        </div>

        <div
          class="govuk-form-group form-group-minutes govuk-date-input__item"
          style="display: inline"
        >
          <label class="govuk-label govuk-date-input__label" for="{{input.id}}-minutes">
            Minute
          </label>
          <input
            class="govuk-input govuk-date-input__input govuk-input--width-2"
            id="{{input.id}}-minutes"
            name="{{input.name}}Minutes"
            value="{{input.value.minutes}}"
            type="number"
            pattern="[0-9]{2}"
            min="0"
            max="59"
            {% if input.disabled %}disabled{% endif %}
          />
        </div>
      </div>
    </fieldset>
  </div>
{% endmacro %}
