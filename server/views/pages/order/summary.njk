{% extends "../../partials/layout.njk" %}

{% set pageTitle = "Application summary - " + applicationName %}
{% set mainClasses = "app-container govuk-body" %}
{% from "moj/components/page-header-actions/macro.njk" import mojPageHeaderActions %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/task-list/macro.njk" import govukTaskList %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "/"
  }) }}

  {{ mojPageHeaderActions({
    heading: {
      text: "Tag request form"
    }
  }) }}

  <h2 class="govuk-heading-l">Form sections</h2>

  <p class="govuk-body-l">
    Complete all sections before submitting the form.
  </p>

  {% set taskListItems = [] %}
  {% for section, tasks in sections %}
    {% set task = tasks[0] %}
    {% set name = section | replace("_", " ") | capitalize %}
    {% set href = task.path %}
    {% set complete = task.status != 'INCOMPLETE' %}

    {% if task.required %}
      {% set taskListItems = (taskListItems.push({
        idPrefix: "order-section",
        title: { text: name },
        href: href,
        status: {
          tag: {
            text: "Completed" if complete === true else "Incomplete",
            classes: "govuk-tag--green" if complete === true else "govuk-tag--grey"
          }
        }
      }), taskListItems) %}
    {% endif %}
  {% endfor %}
  {{ govukTaskList({ idPrefix: "sections", items: taskListItems }) }}

