{% extends "../../partials/layout.njk" %}

{% set pageTitle = "Application summary - " + applicationName %}
{% set error = error %}
{% set mainClasses = "app-container govuk-body" %}
{% set formDownloadIcon = '/assets/images/form_download.svg' %}
{% from "moj/components/page-header-actions/macro.njk" import mojPageHeaderActions %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/task-list/macro.njk" import govukTaskList %}

{% block content %}

  {{ govukBackLink({
    text: "Back",
    href: "/"
  }) }}

  {{ mojPageHeaderActions({
    heading: {
      text: "Tag request form"
    }
  }) }}

  <h2 class="govuk-heading-l">Form sections</h2>

  <p class="govuk-body-l">
    Complete all sections before submitting the form.
  </p>

  {% if error %}
    {{ govukErrorSummary({
      titleText: "The form could not be submitted",
      errorList: [
        {
          text: error,
          href: "#"
        }
      ]
    }) }}
  {% endif %}

  {% set items = [] %}
  {% for section in sections %}
    {% set name = section.name | replace("_", " ") | capitalize %}
    {% set href = section.path %}
    {% set status = 'COMPLETE' if section.completed else 
      'INCOMPLETE' %}
    {% set statusArgs = { 
      tag: {
        text: status | capitalize,
        classes: tagColour
      } 
    } if isOrderEditable else {} %}
    {% set tagColour = 'govuk-tag--green' if section.completed else 'govuk-tag--grey' %}
    {% set items = (items.push({
      idPrefix: "order-section",
      title: { text: name },
      href: href,
      status: statusArgs
    }), items) %}
  {% endfor %}

  {{ govukTaskList({ idPrefix: "sections", items: items }) }}

  {% if order.status == "IN_PROGRESS" %}
    <form action="/order/{{ order.id }}/submit" method="post">
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">
      <div class="govuk-button-group">
        {{ govukButton({
            text: "Submit order",
            disabled: not order.isValid
        }) }}
        {{ govukButton({
          text: "Delete order",
          href: "/order/" + orderId + "/delete",
          classes: "govuk-button--warning"
        }) }}
      </div>
    </form>
  {% else %}
    <img src="{{ formDownloadIcon }}" alt="Icon of a form">
    {{ govukButton({
      text: "Get tag request form summary for download",
      href: "/order/" + orderId + "/receipt",
      classes: "govuk-button--secondary"
    }) }}

    <div class="govuk-button-group">
      <a id="backToSearch" class="govuk-link" href="/">Return to order search view</a>
    </div>
  {% endif %}
{% endblock %}
