{% extends "../../partials/layout.njk" %}

{% set pageTitle = "Application successfully submitted - " + applicationName %}
{% set mainClasses = "app-container govuk-body" %}
{% set formDownloadIcon = '/assets/images/form_download.svg' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% if orderType == 'VARIATION' %}
  {% set titleText = "Changes to the form successfully submitted" %}
{% else %}
  {% set titleText = "Application form successfully submitted" %}
{% endif %}

{% block content %}
  <div class="govuk-grid-column-two-thirds">
    <br/>

    {{ govukPanel({
      titleText: titleText,
      attributes: {
        "data-qa": "confirmation-panel"
      }
    }) }}

    <img src="{{ formDownloadIcon }}" alt="Icon of a form">

    {{ govukButton({
      text: "View and download completed application form",
      href: "/order/" + orderId + "/receipt",
      classes: "govuk-button--secondary",
      id: "receipt-button"
    }) }}

    <br/>

    {{ govukButton({
      text: "Back to start",
      href: "/",
      id: "back-to-applications-button"
    }) }}

    <p  class="govuk-body">
      <a href="https://forms.office.com/e/khDZBF1tCS">
        What did you think of this service? (takes 30 seconds)
      </a>
    </p>

  </div>
{% endblock %}
