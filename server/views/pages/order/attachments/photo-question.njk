{% extends "../../../partials/form-layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set section = content.pages.photoQuestion.section %}
{% set questions = content.pages.photoQuestion.questions %}

{% block formInputs %}

  {{ govukRadios({
  classes: "govuk-radios--inline",
  fieldset: {
    legend: {
      text: questions.havePhoto.text,
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  hint: {
    text: questions.havePhoto.hint
  },
  items: [
    {
      value: "yes",
      text: "Yes"
    },
    {
      value: "no",
      text: "No"
    }
  ]
}) }}

{% endblock %}
