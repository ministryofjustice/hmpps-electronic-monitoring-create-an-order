{% extends "../../../partials/layout.njk" %}

{% set pageTitle = "Confirm delete attachment - " + fileType %}
{% set mainClasses = "app-container govuk-body" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "/order/" + order.id + "/summary"
  }) }}

  <h1 class="govuk-heading-l">
    <span class="govuk-caption-l">Additional documents</span>
    Are you sure that you want to delete this document?
  </h1>

  <form method="post">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Yes, delete",
        classes: "govuk-button--warning",
        name: "action",
        value: "continue"
      })}}

      {{ govukButton({
        text: "Cancel and return to check answers",
        classes: "govuk-button--secondary",
        name: "action",
        value: "back"
      })}}
    </div>
  </form>
{% endblock %}
