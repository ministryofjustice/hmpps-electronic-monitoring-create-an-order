{% extends "../../../../partials/form-layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set section = "Electronic monitoring required" %}
{% set singleQuestionPage = true %}


{% set items = [] %}

{% for question in sentenceTypeQuestions %}
    {% if loop.last and (question.value == 'COMMUNITY' or question.value == 'BAIL') %}
        {% set items = (items.push({
            divider: "or",
            disabled: not isOrderEditable
        }), items) %}
    {% endif %}

    {% set items = (items.push({
      text: question.question,
      value: question.value,
      disabled: not isOrderEditable
    }), items) %}
{% endfor %}

{% block formInputs %}
    {% set titleText = 'What type of bail has the device wearer been given?' if orderType == 'BAIL' else 'What type of sentence has the device wearer been given?' %}
    {{ govukRadios({
      name: "sentenceType",
      errorMessage: sentenceType.error,
      value: sentenceType.value,
      fieldset: {
        legend: {
          text: titleText,
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
      },
      items: items
    })}}
{% endblock %}

