{% extends "../../../partials/check-your-answers-layout.njk" %}

{% set section = "Monitoring conditions" %}
{% set pageTitle = "Monitoring conditions - Check your answers - " + applicationName %}
{% set mainClasses = "app-container govuk-body" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block answers %}

  {{ govukSummaryList({
    card: {
      title: {
        text: "Details of the monitoring"
      }
    },
    rows: monitoringConditions
  }) }}

  {{ govukSummaryList({
    card: {
      title: {
        text: "Installation address"
      }
    },
    rows: installationAddress
  }) }}

  {% if curfew | length > 0 %}

    {{ govukSummaryList({
      card: {
        title: {
          text: "Curfew monitoring conditions"
        }
      },
      rows: curfew
    }) }}

    {{ govukSummaryList({
      card: {
        title: {
          text: "Curfew timetable"
        }
      },
      rows: curfewTimetable
    }) }}

  {% endif %}

   {% for item in exclusionZone %}
    {{ govukSummaryList({
      card: {
        title: {
          text: "Exclusion zone monitoring"
        }
      },
      rows: item
    }) }}
  {% endfor %}

  {% if trail | length > 0 %}

    {{ govukSummaryList({
      card: {
        title: {
          text: "Trail monitoring"
        }
      },
      rows: trail
    }) }}

  {% endif %}
  
  {% for item in attendance %}
    {{ govukSummaryList({
      card: {
        title: {
          text: "Attendance monitoring"
        }
      },
      rows: item
    }) }}
  {% endfor %}
  

  {% if alcohol | length > 0 %}

    {{ govukSummaryList({
      card: {
        title: {
          text: "Alcohol monitoring conditions"
        }
      },
      rows: alcohol
    }) }}

  {% endif %}

{% endblock %}
