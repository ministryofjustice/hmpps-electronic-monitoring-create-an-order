{% extends "../../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Form Details" %}
{% set mainClasses = "app-container govuk-body" %}
{% from "moj/components/page-header-actions/macro.njk" import mojPageHeaderActions %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "../../../partials/timeInput.njk" import timeInput %}
{% from "../../../partials/addressInput.njk" import addressInput %}

{% block content %}

  {{ govukBackLink({
    text: "Back",
    href: orderSummaryUri
  }) }}

  {% if not isOrderEditable %}
      {% set html %}
        <p class="govuk-notification-banner__heading">
          You are viewing a submitted order.
        </p>
      {% endset %}

      {{ govukNotificationBanner({
        html: html
      }) }}
  {% endif %}

  <div class="homepage-content">
    {{ mojPageHeaderActions({
      heading: {
          text: "Monitoring conditions"
      }
    }) }}
  </div>
  <h2 class="govuk-heading-l">Attendance monitoring</h2>

  <form method="post">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    {% set disabled = {} if isOrderEditable else { disabled:true } %}

    {{ govukDateInput({
      id: "startDate",
      namePrefix: "startDate",
      fieldset: {
        legend: {
          text: "Enter the date when the monitoring starts",
          isPageHeading: false,
          classes: "govuk-fieldset__legend--s"
        }
      },
      hint: {
        text: "For example, 21 05 2011"
      },
      items: [
        {
          name: "day",
          classes: "govuk-input--width-2",
          value: startDateDay.value,
          attributes: disabled
        },
        {
          name: "month",
          classes: "govuk-input--width-2",
          value: startDateMonth.value,
          attributes: disabled
        },
        {
          name: "year",
          classes: "govuk-input--width-4",
          value: startDateYear.value,
          attributes: disabled
        }
      ],
      errorMessage: startDate.error
    }) }}

    {{ govukDateInput({
      id: "endDate",
      namePrefix: "endDate",
      fieldset: {
        legend: {
          text: "Enter the date when the monitoring ends (optional)",
          isPageHeading: false,
          classes: "govuk-fieldset__legend--s"
        }
      },
      hint: {
        text: "For example, 21 05 2011"
      },
      items: [
        {
          name: "day",
          classes: "govuk-input--width-2",
          value: endDateDay.value,
          attributes: disabled
        },
        {
          name: "month",
          classes: "govuk-input--width-2",
          value: endDateMonth.value,
          attributes: disabled
        },
        {
          name: "year",
          classes: "govuk-input--width-4",
          value: endDateYear.value,
          attributes: disabled
        }
      ],
      errorMessage: endDate.error
    }) }}

    <h2 class="govuk-heading-l">Appointment details</h2>

    {{ govukInput({
        label: {
          text: "What is the appointment for?"
        },
        hint: {
          text: "For example education or medical appointment"
        },
        classes: "govuk-!-width-one-half",
        id: "purpose",
        name: "purpose",
        value: purpose.value,
        errorMessage: purpose.error,
        disabled: not isOrderEditable
      }) }}

    {{ govukInput({
        label: {
          text: "Appointment day"
        },
        classes: "govuk-!-width-one-half",
        id: "appointmentDay",
        name: "appointmentDay",
        value: appointmentDay.value,
        errorMessage: appointmentDay.error,
        disabled: not isOrderEditable
      }) }}

    {{ timeInput({
        label: "Appointment start time",
        hint: "For example 09:45 or 15:30 (24 hours)",
        id: "startTime",
        name: "startTime",
        value: startTime.value,
        errorMessage: startTime.error,
        disabled: not isOrderEditable
      }) }}

    {{ timeInput({
        label: "Appointment end time",
        hint: "For example 09:45 or 15:30 (24 hours)",
        id: "endTime",
        name: "endTime",
        value: endTime.value,
        errorMessage: endTime.error,
        disabled: not isOrderEditable
      }) }}

    {{ addressInput({
        label: "Appointment location",
        id: "address",
        name: "address",
        value: address.value,
        errorMessage: address.error,
        disabled: not isOrderEditable
      }) }}

    {% if isOrderEditable %}
      {{ govukRadios({
        name: "addAnother",
        classes: "govuk-radios--inline",
        fieldset: {
          legend: {
            text: "Would you like to add another appointment?",
            isPageHeading: false,
            classes: "govuk-fieldset__legend--s"
          }
        },
        items: [
          {
            value: "true",
            text: "Yes",
            disabled: not isOrderEditable
          },
          {
            value: "false",
            text: "No",
            disabled: not isOrderEditable
          }
        ],
        value: addAnother.value,
        errorMessage: addAnother.error,
        disabled: not isOrderEditable
      }) }}
    {% endif %}

    <div class="govuk-button-group">
      {% if isOrderEditable %}
        {{ govukButton({
            text: "Save and continue",
            name: "action",
            value: "continue"
        }) }}
        {{ govukButton({
            text: "Save and return back to to form section menu",
            classes: "govuk-button--secondary",
            name: "action",
            value: "back"
        }) }}
      {% else %}
        <a id="backToSummary" class="govuk-link" href="{{ orderSummaryUri }}">Return back to to form section menu</a>
      {% endif %}
    </div>
  </form>

{% endblock %}
