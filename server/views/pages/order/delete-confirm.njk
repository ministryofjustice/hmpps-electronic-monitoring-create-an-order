{% extends "../../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set mainClasses = "app-container govuk-body" %}
{% set pageContent = content.pages.deleteConfirm %}
{% set pageTitle = pageContent.title + " - " + applicationName %}
{% set heading = pageContent.heading %}
{% set confirmButtonText = pageContent.buttons.confirm %}
{% set cancelButtonText = pageContent.buttons.cancel %}


{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "/order/" + order.id + "/summary"
  }) }}

  <h1 class="govuk-heading-l">{{ heading }}</h1>

  <form method="post">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    <div class="govuk-button-group">
        {{ govukButton({
          text: confirmButtonText,
          classes: "govuk-button--warning",
          name: "action",
          value: "continue",
          id: "confirm-delete-button"
        })}}

        {{ govukButton({
          text: cancelButtonText,
          classes: "govuk-button--secondary",
          name: "action",
          value: "back",
          id: "back-button"
        })}}
    </div>
  </form>
{% endblock %}
