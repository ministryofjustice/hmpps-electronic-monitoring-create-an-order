{% extends "../../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set mainClasses = "app-container govuk-body" %}
{% set pageContent = content.pages.editConfirm %}
{% set pageTitle = pageContent.title + " - " + applicationName %}
{% set heading = pageContent.heading + ' ' + deviceWearer.firstName + ' ' + deviceWearer.lastName + '?' %}
{% set helpText = pageContent.helpText %}
{% set confirmButtonText = pageContent.buttons.confirm %}
{% set cancelButtonText = pageContent.buttons.cancel %}


{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/order/" + order.id + "/summary"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">{{ heading }}</h1>

      {% for paragraph in helpText %}
        <p class="govuk-body">{{ paragraph }}</p>
      {% endfor %}

      <form action="/order/{{ order.id }}/variation" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div class="govuk-button-group">
          {{ govukButton({
          text: confirmButtonText,
          classes: "govuk-button--warning",
          id: "confirm-button",
          name: "action",
          value: "continue",
          type: "submit"
        }) }}

        {{ govukButton({
          text: cancelButtonText,
          classes: "govuk-button--secondary",
          id: "cancel-button",
          href: "/order/" + order.id + "/summary"
        })}}
        </div>
        </form>
      </div>
    </div>
  {% endblock %}
