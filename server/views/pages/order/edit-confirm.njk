{% extends "../../partials/layout.njk" %}
{% set pageTitle = "Confirm edit application - " + applicationName %}
{% set mainClasses = "app-container govuk-body" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/order/" + order.id + "/summary"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set heading = 'Are you sure that you want to make changes to the EMO application form for ' + order.deviceWearer.firstName + ' ' + order.deviceWearer.lastName + '?' %}
      <h1 class="govuk-heading-l">
        {{ heading }}
      </h1>
      <p class="govuk-body">Check and update the licence or court order before making changes to the EMO application form.</p>
      <p class="govuk-body">You can make changes to the EMO application form now if the information you are changing isn't
        included in the licence or court order.</p>

      <form action="/order/{{ order.id }}/variation" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

          <div class="govuk-button-group">
            {{ govukButton({
            text: "Yes, make changes",
            classes: "govuk-button--warning",
            id: "confirm-button",
            name: "action",
            value: "continue",
            type: "submit"
          }) }}
          {{ govukButton({
            text: "Cancel and return back to form",
            classes: "govuk-button--secondary",
            id: "cancel-button",
            href: "/order/" + order.id + "/summary"
          })}}
          </div>
        </form>
      </div>
    </div>
  {% endblock %}
