{% extends "../../../partials/form-layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% set section = content.pages.identityNumbers.section %}
{% set singleQuestionPage = true %}
{% set isIdentityPage = true %}
{% set questions = content.pages.identityNumbers.questions %}
{% set questionName = "Identity numbers"%}

{% block formInputs %}
  {% set pncIdHtml %}
  {{ govukInput({
    label: {
      text: questions.pncId.hint,
      classes: "govuk-fieldset__legend--s"
    },
    classes: "govuk-input--width-10",
    id: "pncId",
    name: "pncId",
    value: pncId.value,
    errorMessage: pncId.error,
    disabled: not isOrderEditable
  }) }}
  {% endset %}

  {% set nomisIdHtml %}
  {{ govukInput({
    label: {
      text: questions.nomisId.hint,
      classes: "govuk-fieldset__legend--s"
    },
    classes: "govuk-input--width-10",
    id: "nomisId",
    name: "nomisId",
    value: nomisId.value,
    errorMessage: nomisId.error,
    disabled: not isOrderEditable
  }) }}
  {% endset %}

  {% set prisonNumberHtml %}
  {{ govukInput({
    label: {
      text: questions.prisonNumber.hint,
      classes: "govuk-fieldset__legend--s"
    },
    classes: "govuk-input--width-10",
    id: "prisonNumber",
    name: "prisonNumber",
    value: prisonNumber.value,
    errorMessage: prisonNumber.error,
    disabled: not isOrderEditable
  }) }}
  {% endset %}

  {% set deliusIdHtml %}
  {{ govukInput({
    label: {
      text: questions.deliusId.hint,
      classes: "govuk-fieldset__legend--s"
    },
    classes: "govuk-input--width-10",
    id: "deliusId",
    name: "deliusId",
    value: deliusId.value,
    errorMessage: deliusId.error,
    disabled: not isOrderEditable
  }) }}
  {% endset %}

  {% set complianceAndEnforcementPersonReferenceHtml %}
  {{ govukInput({
    label: {
      text: questions.complianceAndEnforcementPersonReference.hint,
      classes: "govuk-fieldset__legend--s"
    },
    classes: "govuk-input--width-10",
    id: "complianceAndEnforcementPersonReference",
    name: "complianceAndEnforcementPersonReference",
    value: complianceAndEnforcementPersonReference.value,
    errorMessage: complianceAndEnforcementPersonReference.error,
    disabled: not isOrderEditable
  }) }}
  {% endset %}

  {% set courtCaseReferenceNumberHtml %}
  {{ govukInput({
    label: {
      text: questions.courtCaseReferenceNumber.hint,
      classes: "govuk-fieldset__legend--s"
    },
    classes: "govuk-input--width-10",
    id: "courtCaseReferenceNumber",
    name: "courtCaseReferenceNumber",
    value: courtCaseReferenceNumber.value,
    errorMessage: courtCaseReferenceNumber.error,
    disabled: not isOrderEditable
  }) }}
  {% endset %}

  {{ govukCheckboxes({
    name: "identityNumbers",
    fieldset: {
      legend: {
        text: content.pages.identityNumbers.legend,
        isPageHeading: false,
        classes: "govuk-fieldset__legend--l"
      }
    },
    hint: {
      text: content.pages.identityNumbers.helpText
    },
    items: [
      {
        value: "pncId",
        text: questions.pncId.text,
        conditional: {
          html: pncIdHtml
        },
        checked: pncId.value,
        disabled: pncId.disabled
      },
      {
        value: "nomisId",
        text: questions.nomisId.text,
        conditional: {
          html: nomisIdHtml
        },
        checked: nomisId.value,
        disabled: nomisId.disabled
      },
      {
        value: "prisonNumber",
        text: questions.prisonNumber.text,
        conditional: {
          html: prisonNumberHtml
        },
        checked: prisonNumber.value,
        disabled: prisonNumber.disabled
      },
      {
        value: "deliusId",
        text: questions.deliusId.text,
        conditional: {
          html: deliusIdHtml
        },
        checked: deliusId.value,
        disabled: deliusId.disabled
      },
      {
        value: "complianceAndEnforcementPersonReference",
        text: questions.complianceAndEnforcementPersonReference.text,
        conditional: {
          html: complianceAndEnforcementPersonReferenceHtml
        },
        checked: complianceAndEnforcementPersonReference.value,
        disabled: complianceAndEnforcementPersonReference.disabled
      },
      {
        value: "courtCaseReferenceNumber",
        text: questions.courtCaseReferenceNumber.text,
        conditional: {
          html: courtCaseReferenceNumberHtml
        },
        checked: courtCaseReferenceNumber.value,
        disabled: courtCaseReferenceNumber.disabled
      }
    ]
  }) }}

{% endblock %}
