{% from "govuk/components/table/macro.njk" import govukTable %}
{% extends "./partials/layout.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Cookies</h1>

      <p class="govuk-body">
        Cookies are small files saved on your phone, tablet or computer when you visit a website.
      </p>

      <p class="govuk-body">
        We use an essential cookie to keep your data secure while you use this service.
      </p>

      <p class="govuk-body">
         We do not need to ask permission to use essential cookies.
      </p>

      {{ govukTable({
        caption: "Essential cookies",
        captionClasses: "govuk-table__caption--m",
        firstCellIsHeader: true,
        head: [
            {
            text: "Name"
            },
            {
            text: "Purpose"
            },
            {
            text: "Expires"
            }
        ],
        rows: [
            [
            {
                text: "session_cookie"
            },
            {
                text: "Used to keep you signed in"
            },
            {
                text: "120 minutes"
            }
            ]           
        ]
        }) }}
    </div>
  </div>
{% endblock %}
